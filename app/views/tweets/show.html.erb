<h1 class="text-xl text-center font-bold p-4 border-b border-gray-800">Tweet</h1>
<div class="mx-auto">
  <%= render 'tweets/tweet', tweet: @tweet %>
  <div class="flex justify-between space-x-4 mt-5">
    <%= link_to "Edit this tweet", edit_tweet_path(@tweet), class: "tweet-button" %>
    <%= link_to "Back to tweets", root_path, class: "tweet-button" %>
    <%= button_to "Destroy this tweet", @tweet, method: :delete, class: "tweet-button" %>
  </div>
</div>

