<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="form-main-div">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
    <h2 class="form-h2">Create account</h2>
    <%= render "users/shared/error_messages", resource: resource %>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="space-y-6" action="#" method="POST">
      <div>
        <label for="email" class="form-label">Email address</label>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
        </div>
      </div>
      <div>
        <label for="email" class="form-label">Username</label>
        <div class="mt-2">
          <%= f.text_field :username, class: "form-field" %>
        </div>
      </div>
      <div>
        <div class="form-div-label">
          <label for="password" class="form-label">Password</label>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-field" %>
        </div>
      </div>
      <div>
        <div class="form-div-label">
          <label for="password" class="form-label">Password confirmation</label>
        </div>
        <div class="mt-2 mb-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field" %>
        </div>
      </div>
      <div>
        <%= f.submit "Sign up", class: "form-submit" %>
      </div>
    </form>
    <p class="form-div-link">
     Already have account?
      <%= link_to "Log in", new_user_session_path, class: "form-link" %> <span aria-hidden="true">&rarr;</span>
    </p>
  </div>
</div>
<% end %>
