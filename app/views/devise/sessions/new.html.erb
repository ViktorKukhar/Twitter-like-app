<% content_for :header_title do %>
  Log in
<% end %>

<%= form_with model: resource, url: session_path(resource_name) do |f| %>
  <div id="form" class="main-div">

    <div class="logo-div">
      <h2 class="h2">Sign in to your account</h2>

      <%= render "users/shared/error_messages", resource: resource %>

    </div>

    <div class="div-group">
      <div class="space-y-6">
        <div>
          <%= f.label :email, "Email address", class: "label" %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field" %>
          </div>
        </div>

        <div>
          <%= f.label :password, "Password", class: "label" %>
          <div class="mt-2 mb-4">
            <%= f.password_field :password, autocomplete: "current-password", class: "field" %>
          </div>
        </div>
          <%= f.submit "Log in", class: "submit" %>
      </div>

      <p class="div-link">
        Not a member?
        <%= link_to "Create account", new_user_registration_path, class: "link" %> <span aria-hidden="true">&rarr;</span>
      </p>
    </div>
  </div>
<% end %>
